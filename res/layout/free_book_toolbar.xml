<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/free_book_toolbar_body_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_for_toolsbar_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/footer_bg" >

        <TextView
            android:id="@+id/price_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:text="￥0"
            android:textColor="@color/TextHighlighted"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/day_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/price_TextView"
            android:text="/晚"
            android:textColor="@color/White"
            android:textSize="15.0dip" />

        <Button
            android:id="@+id/freebook_Button"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="4.0dip"
            android:background="@drawable/selector_short_button_bg_highlight"
            android:text="免费预订"
            android:textColor="@drawable/selector_button_text_color_highlight"
            android:textSize="@dimen/FontSizeForNormalMenu" />
    </RelativeLayout>

</RelativeLayout>