<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_main_navigation_tabspec_bg"
    android:orientation="vertical" >

    <!-- tabspec 的前景 icon -->

    <ImageView
        android:id="@+id/main_navigation_tabspec_icon_imageview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center" />

    <!-- tabspec 的前景 文字标题 -->

    <TextView
        android:id="@+id/main_navigation_tabspec_title_textview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@drawable/selector_main_navigation_tabspec_text_color" />

</LinearLayout>